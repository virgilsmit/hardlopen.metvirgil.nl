<%= form_with(model: training_schema, url: schema_path, local: true) do |form| %>
  <div style="color: red; font-weight: bold;">Let op: Opslaan werkt nog niet, want er is geen POST route voor trainingsschema's.</div>
  <% if training_schema.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(training_schema.errors.count, "error") %> verhinderen opslaan:</h2>
      <ul>
        <% training_schema.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, 'Naam schema', style: 'display:block' %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :description, 'Omschrijving', style: 'display:block' %>
    <%= form.text_area :description, rows: 3 %>
  </div>

  <div>
    <%= form.label :group_id, 'Koppel aan groep', style: 'display:block' %>
    <%= form.collection_select :group_id, groups, :id, :name, prompt: 'Kies een groep' %>
  </div>

  <div style="margin-top:1rem;">
    <%= form.submit 'Schema aanmaken', class: 'theme-btn', disabled: true %>
  </div>
<% end %> 