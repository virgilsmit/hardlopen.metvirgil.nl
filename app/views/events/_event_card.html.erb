<% past ||= false %>

<div class="event-card" style="background: rgba(13, 23, 45, 0.92); border: 1px solid rgba(255, 255, 255, 0.12); border-radius: 18px; padding: 1.5rem; box-shadow: 0 8px 24px rgba(3, 6, 18, 0.6); transition: transform 0.2s, box-shadow 0.2s; <%= 'opacity: 0.7;' if past %>">
  <!-- Date Badge -->
  <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
    <div style="background: linear-gradient(135deg, #FC4C02, #FF6B35); padding: 0.75rem 1.25rem; border-radius: 12px; text-align: center; min-width: 80px;">
      <div style="color: white; font-size: 1.5rem; font-weight: 800; line-height: 1;">
        <%= event.date.strftime('%d') %>
      </div>
      <div style="color: rgba(255, 255, 255, 0.9); font-size: 0.85rem; text-transform: uppercase; font-weight: 600;">
        <%= I18n.l(event.date, format: '%b %Y') %>
      </div>
    </div>
    
    <% if event.registration_open? && !past %>
      <span style="background: rgba(110, 231, 90, 0.2); color: #6ee75a; padding: 0.5rem 1rem; border-radius: 8px; font-size: 0.85rem; font-weight: 600;">
        âœ“ Inschrijving open
      </span>
    <% elsif !past %>
      <span style="background: rgba(255, 107, 53, 0.2); color: #ff6b35; padding: 0.5rem 1rem; border-radius: 8px; font-size: 0.85rem; font-weight: 600;">
        â° Inschrijving gesloten
      </span>
    <% end %>
  </div>
  
  <!-- Event Title -->
  <h3 style="color: #ffffff; font-size: 1.5rem; font-weight: 700; margin-bottom: 0.75rem;">
    <%= event.name %>
  </h3>
  
  <!-- Event Details -->
  <div style="margin-bottom: 1.5rem;">
    <% if event.distance.present? %>
      <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem;">
        <span style="color: #1ee3cf; font-size: 1.25rem;">ğŸƒâ€â™‚ï¸</span>
        <span style="color: rgba(244, 248, 255, 0.9); font-weight: 600;"><%= event.distance %></span>
      </div>
    <% end %>
    
    <% if event.location.present? %>
      <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem;">
        <span style="color: #1ee3cf; font-size: 1.25rem;">ğŸ“</span>
        <span style="color: rgba(244, 248, 255, 0.9);"><%= event.location %></span>
      </div>
    <% end %>
    
    <% if event.organizer.present? %>
      <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem;">
        <span style="color: #1ee3cf; font-size: 1.25rem;">ğŸ‘¥</span>
        <span style="color: rgba(244, 248, 255, 0.8); font-size: 0.9rem;"><%= event.organizer %></span>
      </div>
    <% end %>
    
    <% if event.price.present? %>
      <div style="display: flex; align-items: center; gap: 0.5rem;">
        <span style="color: #1ee3cf; font-size: 1.25rem;">ğŸ’¶</span>
        <span style="color: rgba(244, 248, 255, 0.9); font-weight: 600;"><%= event.price %></span>
      </div>
    <% end %>
  </div>
  
  <!-- Description -->
  <% if event.description.present? %>
    <p style="color: rgba(244, 248, 255, 0.7); line-height: 1.6; margin-bottom: 1.5rem; font-size: 0.95rem;">
      <%= truncate(event.description, length: 150) %>
    </p>
  <% end %>
  
  <!-- Actions -->
  <div style="display: flex; gap: 0.75rem; flex-wrap: wrap;">
    <%= link_to event_path(event), class: 'theme-btn', style: 'background: rgba(30, 227, 207, 0.2); border: 1px solid #1ee3cf; color: #1ee3cf; padding: 0.75rem 1.5rem; flex: 1; min-width: 120px; text-align: center;' do %>
      <span>ğŸ“‹ Details</span>
    <% end %>
    
    <% if event.url.present? && !past %>
      <%= link_to event.url, target: '_blank', class: 'theme-btn', style: 'background: linear-gradient(135deg, #FC4C02, #FF6B35); color: white; padding: 0.75rem 1.5rem; flex: 1; min-width: 120px; text-align: center; font-weight: 700;' do %>
        <span>ğŸ”— Inschrijven</span>
      <% end %>
    <% end %>
    
    <% if current_user&.admin? || current_user&.has_role?(:trainer) %>
      <%= link_to edit_event_path(event), class: 'theme-btn', style: 'background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); padding: 0.75rem 1rem;' do %>
        <span>âœï¸</span>
      <% end %>
      <%= button_to event_path(event), method: :delete, data: { confirm: 'Weet je zeker dat je dit evenement wilt verwijderen?' }, class: 'theme-btn', style: 'background: rgba(220, 53, 69, 0.2); border: 1px solid #dc3545; color: #dc3545; padding: 0.75rem 1rem;' do %>
        <span>ğŸ—‘ï¸</span>
      <% end %>
    <% end %>
  </div>
</div>

<style>
  .event-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(3, 6, 18, 0.8);
  }
</style>


