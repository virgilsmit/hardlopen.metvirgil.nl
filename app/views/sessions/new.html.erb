<h1>Login</h1>

<div style="background: #232a25; padding: 2rem; border-radius: 12px; margin: 2rem 0;">
  <%= form_with url: login_path, local: true do |form| %>
    <div style="margin-bottom: 1rem;">
      <%= form.label :email, style: 'color: #ffffff !important; display: block; margin-bottom: 0.5rem;' %>
      <%= form.email_field :email,
          autocomplete: 'email',
          style: 'width: 100%; padding: 0.8rem; border-radius: 8px; border: 2px solid #448923; background: #232a25; color: #ffffff !important; font-size: 16px;' %>
    </div>
    <div style="margin-bottom: 1rem;">
      <%= form.label :password, style: 'color: #ffffff !important; display: block; margin-bottom: 0.5rem;' %>
      <%= form.password_field :password,
          autocomplete: 'current-password',
          style: 'width: 100%; padding: 0.8rem; border-radius: 8px; border: 2px solid #448923; background: #232a25; color: #ffffff !important; font-size: 16px;' %>
    </div>
    <div style="margin-top: 1.5rem;">
      <%= form.submit 'Login', style: 'background: #448923; color: #ffffff; padding: 0.8rem 2rem; border: none; border-radius: 8px; font-size: 16px; cursor: pointer;' %>
    </div>
  <% end %>
</div>

<div style="text-align: center; margin-top: 1rem;">
  <%= link_to 'Wachtwoord vergeten?', new_password_reset_path, style: 'color: #448923; text-decoration: none;' %>
</div>
