<h1>Trainingen van deze week</h1>
<style>
  ::selection {
    background: #1976d2;
    color: #fff;
  }
  .schema-table ::selection, .mobile-card ::selection {
    background: #1976d2;
    color: #fff;
  }
  .schema-table {
    width: 100%;
    border-collapse: collapse;
    background: transparent;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: none;
  }
  .schema-table th, .schema-table td {
    padding: 10px 8px;
    text-align: left;
    border-bottom: 1px solid #333;
    font-size: 0.97em;
    background: transparent;
    color: #fff;
  }
  .schema-table th {
    background: transparent;
    font-weight: bold;
    color: #4db3ff;
    border-bottom: 2px solid #1976d2;
  }
  .schema-table tr:nth-child(even) {
    background: rgba(255,255,255,0.04);
  }
  .schema-table tr.clickable-row {
    cursor: pointer;
    transition: background 0.2s;
  }
  .schema-table tr.clickable-row:hover {
    background: #1a2733 !important;
  }
  .theme-btn {
    border-radius: 5px;
    border: none;
    font-size: 0.95em;
    padding: 0.15em 0.7em;
    margin: 0 2px;
    cursor: pointer;
    transition: background 0.2s, color 0.2s;
    min-width: 32px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: #222;
    color: #fff;
  }
  .theme-btn[style*='background:#34c759'] { background: #34c759 !important; color: #fff !important; }
  .theme-btn[style*='background:#e74c3c'] { background: #e74c3c !important; color: #fff !important; }
  .theme-btn[style*='background:#1976d2'] { background: #1976d2 !important; color: #fff !important; }
  .status-dot {
    display: inline-block;
    width: 13px;
    height: 13px;
    border-radius: 50%;
    margin-right: 0.5em;
    vertical-align: middle;
  }
  .status-aanwezig { background: #34c759; }
  .status-afwezig { background: #e74c3c; }
  .status-onbekend { background: #888; }
  .afwezig-note-field input {
    font-size: 0.95em;
    padding: 0.1em 0.5em;
    border-radius: 4px;
    border: 1px solid #444;
    margin-left: 0.5em;
    background: #111;
    color: #fff;
  }
  @media (max-width: 900px) {
    .schema-table th, .schema-table td { font-size: 0.92em; padding: 7px 4px; }
  }
  @media (max-width: 800px) {
    .schema-table, .schema-table thead, .schema-table tbody, .schema-table tr, .schema-table th, .schema-table td {
      display: none !important;
    }
    .mobile-cards {
      display: block;
      margin: 0;
      padding: 0;
    }
    .mobile-card {
      background: rgba(30,40,50,0.97);
      border-radius: 10px;
      margin-bottom: 1.2em;
      box-shadow: 0 2px 8px rgba(0,0,0,0.10);
      padding: 1em 1em 0.7em 1em;
      color: #fff;
      position: relative;
    }
    .mobile-card-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 0.5em;
    }
    .mobile-card-title {
      font-size: 1.1em;
      font-weight: bold;
      margin-right: 0.7em;
      flex: 1 1 auto;
    }
    .mobile-card-status {
      font-size: 0.98em;
      display: flex;
      align-items: center;
      gap: 0.5em;
    }
    .mobile-card-btns {
      display: flex;
      gap: 0.5em;
      margin: 0.7em 0 0.2em 0;
    }
    .mobile-card-more {
      display: flex;
      align-items: center;
      color: #4db3ff;
      font-size: 0.98em;
      cursor: pointer;
      margin-top: 0.2em;
      margin-bottom: 0.2em;
      user-select: none;
    }
    .mobile-card-details {
      display: none;
      font-size: 0.97em;
      margin-top: 0.5em;
      color: #cce6ff;
    }
    .mobile-card-details.open {
      display: block;
      animation: fadein 0.2s;
    }
    @keyframes fadein { from { opacity: 0; } to { opacity: 1; } }
  }
  .schema-table tr:nth-child(even) td,
  .schema-table tr:nth-child(even) th,
  .schema-table tr:nth-child(even) td span,
  .schema-table tr:nth-child(even) td div,
  .schema-table tr:nth-child(even) td strong,
  .schema-table tr:nth-child(even) td em,
  .schema-table tr:nth-child(even) td a {
    background: #232a25 !important;
    color: #fff !important;
    border-color: #232a25 !important;
  }
  .schema-table tr:nth-child(even) td.test-css {
    background: #ff00ff !important;
    color: #fff !important;
  }
  .schema-table th {
    background: #181f1b !important;
    color: #fff !important;
  }
  .mobile-card {
    background: #232a25 !important;
    color: #fff !important;
  }
  .mobile-card .mobile-card-title,
  .mobile-card .mobile-card-status,
  .mobile-card .mobile-card-details,
  .mobile-card .mobile-card-btns,
  .mobile-card .mobile-card-more {
    color: #fff !important;
  }
  .mobile-card-details {
    color: #cce6ff !important;
  }
  .mobile-card input, .mobile-card textarea {
    background: #181f1b !important;
    color: #fff !important;
    border: 1px solid #444 !important;
  }
</style>
<table class="schema-table" style="width:100%; border-collapse:collapse; margin-bottom:2rem;">
  <thead>
    <tr>
      <th class="schema-table__th">Datum</th>
      <th class="schema-table__th">Dag</th>
      <th class="schema-table__th">Training</th>
      <th class="schema-table__th">Loopscholing</th>
      <th class="schema-table__th">Trainer</th>
      <th class="schema-table__th">Locatie</th>
      <th class="schema-table__th">Fase</th>
      <th class="schema-table__th">Wedstrijd</th>
      <th class="schema-table__th">Status</th>
      <th class="schema-table__th">Aan-/afmelden</th>
    </tr>
  </thead>
  <tbody>
    <% @week_sessions.each do |sessie| %>
      <tr class="clickable-row" onclick="if(event.target.tagName !== 'BUTTON' && event.target.tagName !== 'A' && !event.target.closest('.theme-btn')){window.location='/training_sessions/<%= sessie.id %>'}">
        <td style="padding:8px; white-space:nowrap;"><%= l(sessie.date) %></td>
        <td style="padding:8px;"><%= sessie.dag %></td>
        <td style="padding:8px;"><%= sessie.description %></td>
        <td style="padding:8px;"><%= sessie.loopscholing %></td>
        <td style="padding:8px;"><%= sessie.trainer&.name || '-' %></td>
        <td style="padding:8px;"><%= sessie.locatie %></td>
        <td style="padding:8px;"><%= sessie.fase %></td>
        <td style="padding:8px;"><%= sessie.wedstrijd %></td>
        <td style="padding:8px;">
          <% if current_user %>
            <% attendance = sessie.attendances.find_by(user_id: current_user.id) %>
            <% if attendance&.status == 'aanwezig' %>
              <span style="display:inline-block;width:14px;height:14px;border-radius:50%;background:#34c759;margin-right:0.5em;"></span>
              <span style="color:#34c759;font-weight:bold;">Aanwezig</span>
            <% elsif attendance&.status == 'afwezig' %>
              <span style="display:inline-block;width:14px;height:14px;border-radius:50%;background:#e74c3c;margin-right:0.5em;"></span>
              <span style="color:#e74c3c;font-weight:bold;">Afwezig</span>
              <% if attendance.note.present? %>
                <span style="margin-left:0.5em;color:#888;font-style:italic;">- <%= attendance.note %></span>
              <% end %>
            <% else %>
              <span style="display:inline-block;width:14px;height:14px;border-radius:50%;background:#ccc;margin-right:0.5em;"></span>
              <span style="color:#888;">Geen status</span>
            <% end %>
            <% if current_user.admin? || (current_user.has_role?(:trainer) && (sessie.group&.hoofdtrainer_id == current_user.id || sessie.group&.medetrainer_id == current_user.id)) %>
              <%= link_to 'Bewerken', edit_training_session_path(sessie), class: 'theme-btn', style: 'background:#1976d2;margin-left:1em;padding:0.2em 1.1em;font-size:0.95em;' %>
            <% end %>
          <% end %>
        </td>
        <td style="padding:8px;">
          <% if current_user %>
            <% attendance = sessie.attendances.find_by(user_id: current_user.id) %>
            <div style="display:flex; gap:0.3em;">
              <%= form_with url: attendances_path, method: :post, local: true, style: 'display:inline;' do |f| %>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <%= f.hidden_field :training_session_id, value: sessie.id %>
                <%= f.hidden_field :status, value: 'aanwezig' %>
                <button type="submit" class="theme-btn" style="background:#34c759; color:#fff; border:<%= (attendance.nil? || attendance.status == 'aanwezig') ? '2px solid #222' : 'none' %>; font-weight:bold; padding:0.2em 0.7em; font-size:0.95em; min-width: 60px; opacity:<%= (attendance.nil? || attendance.status == 'aanwezig') ? '1' : '0.4' %>;">Aanw.</button>
              <% end %>
              <%= form_with url: attendances_path, method: :post, local: true, html: { class: 'afwezig-form', data: { session_id: sessie.id } }, style: 'display:inline;' do |f| %>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <%= f.hidden_field :training_session_id, value: sessie.id %>
                <%= f.hidden_field :status, value: 'afwezig' %>
                <div style="display:flex;align-items:center;gap:0.5em;flex-wrap:wrap;">
                  <% if attendance&.status == 'afwezig' %>
                    <button type="submit" class="theme-btn afwezig-submit" data-session-id="<%= sessie.id %>" style="background:#e74c3c; color:#fff; font-weight:bold;">OK</button>
                  <% else %>
                    <button type="submit" class="theme-btn afwezig-btn" data-session-id="<%= sessie.id %>" style="background:#e74c3c; color:#fff; border:none; font-weight:bold; opacity:0.7;">✗</button>
                  <% end %>
                  <%# Notitieveld altijd tonen als status afwezig is, anders verborgen %>
                  <div class="afwezig-note-field" id="afwezig-note-<%= sessie.id %>" style="margin-top:0.6em;width:100%;<%= attendance&.status == 'afwezig' ? '' : 'display:none;' %>">
                    <%= f.text_field :note, value: (attendance&.status == 'afwezig' ? attendance&.note : nil), placeholder: 'Notitie (optioneel)', style: 'width:100%;font-size:0.95em;padding:0.4em 0.6em;border-radius:6px;' %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mobile-cards" style="display:none;">
  <% @week_sessions.each do |sessie| %>
    <div class="mobile-card">
      <div class="mobile-card-header">
        <div class="mobile-card-title">
          <%= l(sessie.date) %> <span style="font-size:0.97em;font-weight:normal;opacity:0.7;">(<%= sessie.dag %>)</span><br>
          <%= sessie.description %>
        </div>
        <div class="mobile-card-status">
          <% attendance = sessie.attendances.find_by(user_id: current_user&.id) %>
          <% if attendance&.status == 'aanwezig' %>
            <span class="status-dot status-aanwezig"></span><span style="color:#34c759;font-weight:bold;">Aanwezig</span>
          <% elsif attendance&.status == 'afwezig' %>
            <span class="status-dot status-afwezig"></span><span style="color:#e74c3c;font-weight:bold;">Afwezig</span>
          <% else %>
            <span class="status-dot status-onbekend"></span><span style="color:#888;">Geen status</span>
          <% end %>
        </div>
      </div>
      <div class="mobile-card-btns">
        <% if current_user %>
          <%= form_with url: attendances_path, method: :post, local: true, style: 'display:inline;' do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :training_session_id, value: sessie.id %>
            <%= f.hidden_field :status, value: 'aanwezig' %>
            <button type="submit" class="theme-btn" style="background:#34c759; color:#fff; border:<%= (attendance.nil? || attendance.status == 'aanwezig') ? '2px solid #222' : 'none' %>; font-weight:bold; opacity:<%= (attendance.nil? || attendance.status == 'aanwezig') ? '1' : '0.4' %>;"><span>✓</span></button>
          <% end %>
          <%= form_with url: attendances_path, method: :post, local: true, html: { class: 'afwezig-form', data: { session_id: sessie.id } }, style: 'display:inline;' do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :training_session_id, value: sessie.id %>
            <%= f.hidden_field :status, value: 'afwezig' %>
            <div style="display:flex;align-items:center;gap:0.5em;flex-wrap:wrap;">
              <% if attendance&.status == 'afwezig' %>
                <button type="submit" class="theme-btn afwezig-submit" data-session-id="<%= sessie.id %>" style="background:#e74c3c; color:#fff; font-weight:bold;">OK</button>
              <% else %>
                <button type="submit" class="theme-btn afwezig-btn" data-session-id="<%= sessie.id %>" style="background:#e74c3c; color:#fff; border:none; font-weight:bold; opacity:0.7;">✗</button>
              <% end %>
              <%# Notitieveld altijd tonen als status afwezig is, anders verborgen %>
              <div class="afwezig-note-field" id="afwezig-note-<%= sessie.id %>" style="margin-top:0.6em;width:100%;<%= attendance&.status == 'afwezig' ? '' : 'display:none;' %>">
                <%= f.text_field :note, value: (attendance&.status == 'afwezig' ? attendance&.note : nil), placeholder: 'Notitie (optioneel)', style: 'width:100%;font-size:0.95em;padding:0.4em 0.6em;border-radius:6px;' %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="mobile-card-more" onclick="toggleCardDetails(this)">
        <span>Meer info</span> <span style="font-size:1.2em;">▼</span>
      </div>
      <div class="mobile-card-details">
        <div><b>Trainer:</b> <%= sessie.trainer&.name || '-' %></div>
        <div><b>Locatie:</b> <%= sessie.locatie %></div>
        <div><b>Loopscholing:</b> <%= sessie.loopscholing %></div>
        <div><b>Fase:</b> <%= sessie.fase %></div>
        <div><b>Wedstrijd:</b> <%= sessie.wedstrijd %></div>
        <% if attendance&.status == 'afwezig' && attendance.note.present? %>
          <div><b>Notitie:</b> <%= attendance.note %></div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<script>
  function toggleCardDetails(el) {
    var details = el.nextElementSibling;
    details.classList.toggle('open');
    el.querySelector('span:last-child').textContent = details.classList.contains('open') ? '▲' : '▼';
  }
  // Geen JS meer nodig voor notitieveld toggle, alles is server-side

  function toggleMobileView(){
    if(window.innerWidth < 800){
      document.querySelector('.mobile-cards').style.display = 'block';
      document.querySelector('.schema-table').style.display = 'none';
    } else {
      document.querySelector('.mobile-cards').style.display = 'none';
      document.querySelector('.schema-table').style.display = '';
    }
  }

  document.addEventListener('DOMContentLoaded', function(){
    toggleMobileView();
  });
  document.addEventListener('turbo:load', function(){
    toggleMobileView();
  });
  window.addEventListener('resize', function(){
    toggleMobileView();
  });
</script> 