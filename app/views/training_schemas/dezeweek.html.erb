<h1>Trainingen van deze week</h1>
<% if @schema_name.present? %>
  <p class="schema-subtitle">Schema: <strong><%= @schema_name %></strong></p>
<% elsif @week_sessions.empty? %>
  <div class="alert alert-info" style="padding: 1rem; background: #e3f2fd; border-left: 4px solid #2196f3; margin: 1rem 0;">
    <p><strong>Geen trainingsschema ingesteld</strong></p>
    <p>Je hebt nog geen persoonlijk trainingsschema gekozen. Ga naar je <a href="<%= profile_path %>">profiel</a> om een standaard schema te selecteren.</p>
  </div>
<% end %>
<% if @week_sessions.any? %>
<table class="schema-table">
  <thead>
    <tr>
      <th class="schema-table__th">Datum</th>
      <th class="schema-table__th">Dag</th>
      <th class="schema-table__th">Training</th>
      <th class="schema-table__th">Loopscholing</th>
      <th class="schema-table__th">Trainer</th>
      <th class="schema-table__th">Locatie</th>
      <th class="schema-table__th">Fase</th>
      <th class="schema-table__th">Wedstrijd</th>
      <th class="schema-table__th">Status</th>
      <th class="schema-table__th">Aan-/afmelden</th>
    </tr>
  </thead>
  <tbody>
    <% @week_sessions.each do |sessie| %>
      <tr class="clickable-row" onclick="if(event.target.tagName !== 'BUTTON' && event.target.tagName !== 'A' && !event.target.closest('.theme-btn')){window.location='/training_sessions/<%= sessie.id %>'}">
        <td class="date-cell"><%= l(sessie.date) %></td>
        <td><%= sessie.dag %></td>
        <td><%= sessie.description %></td>
        <td><%= sessie.loopscholing %></td>
        <td>
          <% if current_user&.has_role?(:trainer) %>
            <%= form_with model: sessie, url: training_session_path(sessie), method: :patch, local: true, class: 'inline-form' do |f| %>
              <%= f.collection_select :trainer_id, User.with_role(:trainer), :id, :name, { include_blank: true, selected: sessie.trainer_id }, { class: 'trainer-select', onclick: 'event.stopPropagation();', name: 'training_session[trainer_id]' } %>
              <button type="submit" class="theme-btn trainer-submit-btn" onclick="event.stopPropagation();">✓</button>
            <% end %>
          <% else %>
            <%= sessie.trainer&.name || '-' %>
          <% end %>
        </td>
        <td><%= sessie.locatie %></td>
        <td><%= sessie.fase %></td>
        <td><%= sessie.wedstrijd %></td>
        <td>
          <% if current_user %>
            <% attendance = sessie.attendances.find_by(user_id: current_user.id) %>
            <% if attendance&.status == 'aanwezig' %>
              <span class="status-dot status-aanwezig"></span>
              <span class="status-text status-aanwezig-text">Aanwezig</span>
            <% elsif attendance&.status == 'afwezig' %>
              <span class="status-dot status-afwezig"></span>
              <span class="status-text status-afwezig-text">Afwezig</span>
              <% if attendance.note.present? %>
                <span class="attendance-note">- <%= attendance.note %></span>
              <% end %>
            <% else %>
              <span class="status-dot status-onbekend"></span>
              <span class="status-text status-onbekend-text">Geen status</span>
            <% end %>
            <% if current_user.admin? || (current_user.has_role?(:trainer) && (sessie.group&.hoofdtrainer_id == current_user.id || sessie.group&.medetrainer_id == current_user.id)) %>
              <%= link_to 'Bewerken', edit_training_session_path(sessie), class: 'theme-btn edit-btn' %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if current_user %>
            <% attendance = sessie.attendances.find_by(user_id: current_user.id) %>
            <div class="attendance-buttons">
              <%= form_with url: attendances_path, method: :post, local: true, class: 'inline-form' do |f| %>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <%= f.hidden_field :training_session_id, value: sessie.id %>
                <%= f.hidden_field :status, value: 'aanwezig' %>
                <button type="submit" class="theme-btn attendance-btn attendance-aanwezig-btn <%= (attendance.nil? || attendance.status == 'aanwezig') ? 'active' : 'inactive' %>">Aanw.</button>
              <% end %>
              <%= form_with url: attendances_path, method: :post, local: true, html: { class: 'afwezig-form', data: { session_id: sessie.id } }, class: 'inline-form' do |f| %>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <%= f.hidden_field :training_session_id, value: sessie.id %>
                <%= f.hidden_field :status, value: 'afwezig' %>
                <div class="afwezig-container">
                  <% if attendance&.status == 'afwezig' %>
                    <button type="submit" class="theme-btn afwezig-submit" data-session-id="<%= sessie.id %>">OK</button>
                  <% else %>
                    <button type="submit" class="theme-btn afwezig-btn inactive" data-session-id="<%= sessie.id %>">✗</button>
                  <% end %>
                  <%# Notitieveld altijd tonen als status afwezig is, anders verborgen %>
                  <div class="afwezig-note-field" id="afwezig-note-<%= sessie.id %>" class="<%= attendance&.status == 'afwezig' ? '' : 'hidden' %>">
                    <%= f.text_field :note, value: (attendance&.status == 'afwezig' ? attendance&.note : nil), placeholder: 'Notitie (optioneel)', class: 'note-input-full' %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% if @week_sessions.any? %>
<div class="mobile-cards" style="display:none;">
  <% @week_sessions.each do |sessie| %>
    <div class="mobile-card" onclick="window.location='/training_sessions/<%= sessie.id %>'">
      <div class="mobile-card-header">
        <div class="mobile-card-title">
          <%= l(sessie.date) %> <span class="date-subtitle">(<%= sessie.dag %>)</span><br>
          <%= sessie.description %>
        </div>
        <div class="mobile-card-status">
          <% attendance = sessie.attendances.find_by(user_id: current_user&.id) %>
          <% if attendance&.status == 'aanwezig' %>
            <span class="status-dot status-aanwezig"></span><span class="status-text status-aanwezig-text">Aanwezig</span>
          <% elsif attendance&.status == 'afwezig' %>
            <span class="status-dot status-afwezig"></span><span class="status-text status-afwezig-text">Afwezig</span>
          <% else %>
            <span class="status-dot status-onbekend"></span><span class="status-text status-onbekend-text">Geen status</span>
          <% end %>
        </div>
      </div>
      <div class="mobile-card-btns" onclick="event.stopPropagation();">
        <% if current_user %>
          <%= form_with url: attendances_path, method: :post, local: true, class: 'inline-form' do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :training_session_id, value: sessie.id %>
            <%= f.hidden_field :status, value: 'aanwezig' %>
            <button type="submit" class="theme-btn attendance-btn attendance-aanwezig-btn <%= (attendance.nil? || attendance.status == 'aanwezig') ? 'active' : 'inactive' %>"><span>✓</span></button>
          <% end %>
          <%= form_with url: attendances_path, method: :post, local: true, html: { class: 'afwezig-form', data: { session_id: sessie.id } }, class: 'inline-form' do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :training_session_id, value: sessie.id %>
            <%= f.hidden_field :status, value: 'afwezig' %>
            <div class="afwezig-container">
              <% if attendance&.status == 'afwezig' %>
                <button type="submit" class="theme-btn afwezig-submit" data-session-id="<%= sessie.id %>">OK</button>
              <% else %>
                <button type="submit" class="theme-btn afwezig-btn inactive" data-session-id="<%= sessie.id %>">✗</button>
              <% end %>
              <%# Notitieveld altijd tonen als status afwezig is, anders verborgen %>
              <div class="afwezig-note-field" id="afwezig-note-<%= sessie.id %>" class="<%= attendance&.status == 'afwezig' ? '' : 'hidden' %>">
                <%= f.text_field :note, value: (attendance&.status == 'afwezig' ? attendance&.note : nil), placeholder: 'Notitie (optioneel)', class: 'note-input-full' %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="mobile-card-more" onclick="toggleCardDetails(this); event.stopPropagation();">
        <span>Meer info</span> <span class="toggle-icon">▼</span>
      </div>
      <div class="mobile-card-details">
        <div><b>Trainer:</b> 
          <% if current_user&.has_role?(:trainer) %>
            <%= form_with model: sessie, url: training_session_path(sessie), method: :patch, local: true, class: 'inline-form' do |f| %>
              <%= f.collection_select :trainer_id, User.with_role(:trainer), :id, :name, { include_blank: true, selected: sessie.trainer_id }, { class: 'trainer-select', onclick: 'event.stopPropagation();', name: 'training_session[trainer_id]' } %>
              <button type="submit" class="theme-btn trainer-submit-btn" onclick="event.stopPropagation();">✓</button>
            <% end %>
          <% else %>
            <%= sessie.trainer&.name || '-' %>
          <% end %>
        </div>
        <div><b>Locatie:</b> <%= sessie.locatie %></div>
        <div><b>Loopscholing:</b> <%= sessie.loopscholing %></div>
        <div><b>Fase:</b> <%= sessie.fase %></div>
        <div><b>Wedstrijd:</b> <%= sessie.wedstrijd %></div>
        <% if attendance&.status == 'afwezig' && attendance.note.present? %>
          <div><b>Notitie:</b> <%= attendance.note %></div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<% end %>
<script>
  function toggleCardDetails(el) {
    var details = el.nextElementSibling;
    details.classList.toggle('open');
    el.querySelector('.toggle-icon').textContent = details.classList.contains('open') ? '▲' : '▼';
  }
  // Geen JS meer nodig voor notitieveld toggle, alles is server-side

  function toggleMobileView(){
    if(window.innerWidth < 800){
      document.querySelector('.mobile-cards').style.display = 'block';
      document.querySelector('.schema-table').style.display = 'none';
    } else {
      document.querySelector('.mobile-cards').style.display = 'none';
      document.querySelector('.schema-table').style.display = '';
    }
  }

  document.addEventListener('DOMContentLoaded', function(){
    toggleMobileView();
  });
  document.addEventListener('turbo:load', function(){
    toggleMobileView();
  });
  window.addEventListener('resize', function(){
    toggleMobileView();
  });
</script> 