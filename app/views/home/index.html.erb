<% unless current_user %>
  <div style="text-align: center; margin-top: 2rem; margin-bottom: 2rem;">
    <a href="/login?refresh=<%= Time.now.to_i %>" class="app-btn">Login</a>
    <a href="/register" class="app-btn" style="background: linear-gradient(90deg, #00cfff 60%, #1976d2 100%);">Registreren</a>
  </div>
<% end %>

<% if current_user %>
  <div class="theme-cards">
    <% @tiles.each do |tile| %>
    <div class="app-card">
        <div class="theme-card-icon"><%= tile[:icon] %></div>
        <h2><%= tile[:label] %></h2>
        <p><%= tile[:desc] %></p>
        <a href="<%= tile[:url] %>" class="app-btn"><%= tile[:label] %></a>
    </div>
    <% end %>
  </div>
<% end %>

<% if current_user&.role == 'admin' %>
  <div style="text-align: center; margin-top: 1rem;">
    <a href="/admin" class="app-btn" style="background: linear-gradient(90deg, #ff9800 60%, #ffd699 100%);">Admin dashboard</a>
  </div>
<% end %>
